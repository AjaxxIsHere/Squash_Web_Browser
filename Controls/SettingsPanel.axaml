<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Squash_Web_Browser.Controls.SettingsPanel">
  <ScrollViewer>
    <StackPanel Margin="12" Spacing="12">
      <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" />
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Homepage:" Width="120" VerticalAlignment="Center" />
        <TextBox Width="300" Name="HomepageTextBox" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Search Engine:" Width="120" VerticalAlignment="Center" />
        <ComboBox Width="200" Name="SearchEngineCombo" />
      </StackPanel>
      <CheckBox Content="Enable Private Mode" Name="PrivateModeCheck" />
      <CheckBox Content="Block Popups" Name="BlockPopupsCheck" />
      <CheckBox Content="Clear History On Exit" Name="ClearHistoryCheck" />
      <Button Content="Reset to Defaults" HorizontalAlignment="Left" Name="ResetSettingsButton" />
    </StackPanel>
  </ScrollViewer>
</UserControl>